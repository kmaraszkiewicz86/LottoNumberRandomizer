<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LottoNumberRandomizer.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LottoNumberRandomizer.Presentation.Views;assembly=LottoNumberRandomizer.Presentation"
    Title="LottoNumberRandomizer">

    <TabBar>
        <ShellContent
            Title="Lotto Numbers"
            ContentTemplate="{DataTemplate views:LottoNumbersPage}"
            Route="LottoNumbersPage" />

        <ShellContent
            Title="Random Numbers"
            ContentTemplate="{DataTemplate views:RandomNumbersPage}"
            Route="RandomNumbersPage" />
    </TabBar>

</Shell>
